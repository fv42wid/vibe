= form_for @tribe do |f|
  - if @tribe.errors.any?
    #error_explanation
      %h2= "#{pluralize(@tribe.errors.count, "error")} prohibited this tribe from being saved:"
      %ul
        - @tribe.errors.full_messages.each do |msg|
          %li= msg

  %div.form-group
    = f.label :name
    = f.text_field :name, :class => 'form-control'

  %div.form-group
    = f.label :description
    = f.text_area :description, :class => 'form-control', :rows => 5

  %div.form-group
    = f.label :video
    = f.file_field :video, :class => 'form-control'

  .actions
    <button type="submit" class="btn btn-primary">Save</button>
